<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



	<androidx.appcompat.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="?attr/colorPrimary"
		app:title="@string/app_name"
		android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
		android:elevation="4dp"
		android:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />



	<TextView
		android:id="@+id/intro_text_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="@dimen/large_text"
		android:text="@string/menu_intro"
		android:textStyle="bold"
		android:textAlignment="center"
		android:paddingBottom="20dp"
		android:paddingHorizontal="35dp"
		app:layout_constraintTop_toBottomOf="@+id/toolbar"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>



	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/browse_my_folders_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:clickable="true"
		android:focusable="true"
		android:padding="8dp"
		android:layout_marginTop="30dp"
		android:background="@color/off_white"
		android:foreground="?attr/selectableItemBackground"
		app:layout_constraintTop_toBottomOf="@+id/intro_text_view"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" >

		<ImageView
			android:id="@+id/browse_my_folders_icon"
			android:src="@drawable/ic_folder"
			android:layout_width="200dp"
			android:layout_height="200dp"
			android:scaleType="centerCrop"
			android:tint="@color/alt_button_color" />

		<TextView
			android:id="@+id/browse_my_folders_text"
			android:text="@string/browse_my_folders_btn_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="16sp" />
	</LinearLayout>


	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/add_new_folders_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:clickable="true"
		android:focusable="true"
		android:padding="8dp"
		android:layout_marginTop="80dp"
		android:background="@color/off_white"
		android:foreground="?attr/selectableItemBackground"
		app:layout_constraintTop_toBottomOf="@+id/browse_my_folders_container"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" >

		<ImageView
			android:id="@+id/add_new_folders_icon"
			android:src="@drawable/ic_folder_search"
			android:layout_width="200dp"
			android:layout_height="200dp"
			android:scaleType="centerCrop"
			android:tint="@color/alt_button_color" />

		<TextView
			android:id="@+id/add_new_folders_text"
			android:text="@string/add_new_folders_btn_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="16sp" />
	</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>